<div id="product-page" class="sections">
    <div class="card text-white bg-dark mb-3" style="max-width: 100%;">
        <div class="card-header">
            <h1>ID: <%= product.id %></h1>
        </div>
        <div class="card-body">
            <h4 class="card-title">Nombre: <span class="data-text"><%= product.name %></span></h4>
            <h5>Disponibilidad: <span class="data-text"><%= product.availability %></span></h5>
            <h5>Pedidos: <span class="data-text"><%= product.ordered %></span></h5>
            <h5>Stock: <span class="data-text"><%= product.stock %></span></h5>
            <br>
            <h6>Descripci√≥n:</h6>
            <p class="card-text">
                <%= product.description %>
            </p>
        </div>
    </div>
    <a href="/dashboard" class="back">Volver</a>
</div>
<script>
    // Show header when view is dashboard.
    document.getElementsByTagName('header')[0].classList.add('show');
</script>