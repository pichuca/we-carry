<div id="login-page" class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body logo-card">
            <div class="logo-white"></div>
            <p>DE TU WEB A SU PUERTA</p>
        </div>
        <div class="card card-body form-card">
            <% include ./partials/messages %>
            <form action="/users/login" method="POST">
                <div class="form-group">
                <!-- <label for="email">Email</label> -->
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control round-input white-input"
                    placeholder="USUARIO"
                />
                </div>
                <div class="form-group">
                <!-- <label for="password">Contraseña</label> -->
                <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control round-input white-input"
                    placeholder="CONTRASEÑA"
                />
                </div>
                <button type="submit" class="btn btn-primary btn-block round-input">ENTRAR</button>
            </form>
            <!-- <p class="lead mt-4">
                No tenes una cuenta? <a href="/users/register">Registrate</a>
            </p> -->
        </div>
    </div>
    <div class="col-md-6 m-auto we-carry-guy"></div>
</div>
